{
  "name": "node-basic",
  "version": "1.0.0",
  "description": "Mentoring program",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "prod": "node -r dotenv/config dist/app.js",
    "serve": "run-s build up prod",
    "start": "run-s \"up\" \"dev\"",
    "dev": "nodemon -r dotenv/config src/app.ts",
    "dev:debug": "nodemon -r dotenv/config --inspect-brk src/app.ts",
    "lint": "eslint --cache */**/*.{js,ts}  --ignore-path .gitignore --fix",
    "up": "docker-compose up",
    "down": "docker-compose down",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sixtyXi/node-basic.git"
  },
